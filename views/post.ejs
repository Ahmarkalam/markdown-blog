<%- include('partials/header') %>

<a href="/" class="btn btn-outline back-link">&larr; Back to All Posts</a>
<article class="full-post">
    <header>
        <h1><%= post.title %></h1>
        <p class="post-meta">
            <span>By <%= post.author %> on <%= post.createdAt %></span>
            <span class="read-time"><%= post.readTime %></span>
        </p>
    </header>
    <div class="post-content">
        <%- sanitizedHtml %>
    </div>
    <footer class="post-footer">
        <a href="/edit/<%= post.$loki %>" class="btn">Edit Post</a>
        <form action="/post/delete/<%= post.$loki %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this post?');">
            <button type="submit" class="btn btn-delete">Delete Post</button>
        </form>
    </footer>
</article>

<%- include('partials/footer') %>